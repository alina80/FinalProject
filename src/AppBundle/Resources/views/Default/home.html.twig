{% extends '::base.html.twig' %}

{% block sidebar %}
    <div class="card my-4">
        <h5 class="card-header">Categories</h5>
        <div class="card-body">

            <ul>
                {% for cat in categories %}
                    <div class="card-body">
                        <a href="{{ path('category',{'id':cat.id}) }}">{{ cat.name }}</a>
                    </div>
                {% endfor %}
            </ul>

        </div>
    </div>
{% endblock %}

{% block body %}

    <div class="row mt-4">

    {% for prod in products %}
    <div class="col-3 col-md-4">
    <div class="card mb-8">

        {% if prod.mainPhoto %}
            <img src="/uploads/photos/{{ prod.mainPhoto.path}}/750x300" width="100">
        {% else %}

            <img src="http://placehold.it/750x300" alt="Card image cap" width="100">
        {% endif %}

        <div class="card-body mb-4">
            <h4 class="card-title">
                <a href="{{ path('product',{'id':prod.id}) }}">
                    {{ prod.name }}
                </a>
            </h4>
            <p class="card-text">Product details</p>
            <a href="{{ path('product',{'id':prod.id}) }}" class="btn btn-primary">See more</a>
        </div>
    </div>
    </div>
    {% endfor %}
    </div>

    <div class="navigation">
        {{ knp_pagination_render(products) }}
    </div>
{% endblock %}