{% extends '::base.html.twig' %}
{% block sidebar %}
    <div class="card my-4">
        <h5 class="card-header">Categories</h5>
        <div class="card-body">

            <ul>
                {% for cat in categories %}
                    <div class="card-body">
                        <a href="{{ path('category',{'id':cat.id}) }}">{{ cat.name }}</a>
                    </div>
                {% endfor %}
            </ul>

        </div>
    </div>
{% endblock %}

{% block body %}

    <div class="row mt-4">

        {% for prod in products %}
            <div class="col-6 col-md-4">
                <div class="card mb-8">

                    {% if prod.mainPhoto %}
                        <img src="/uploads/photos/{{ prod.mainPhoto.path}}/750x300" width="100">
                    {% else %}

                        <img src="http://placehold.it/750x300" alt="Card image cap" width="100">
                    {% endif %}

                    <div class="card-body mb-4">
                        <h2 class="card-title">
                            <a href="{{ path('product',{'id':prod.id}) }}">
                                {{ prod.name }}
                            </a>
                        </h2>
                        <p class="card-text">Product details</p>
                        <a href="{{ path('product',{'id':prod.id}) }}" class="btn btn-primary">See more &rarr;</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="row mt-5">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
{% endblock %}